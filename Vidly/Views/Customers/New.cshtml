@model  Vidly.ViewModels.NewCustomerViewModels
@{
	/**/

	ViewBag.Title = "New";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("create", "Customers"))
{
	<div class="form-group">
		@Html.LabelFor(a => a.Customer.Name)
		@Html.TextBoxFor(a => a.Customer.Name, new { @class = "form-control" })
	</div>

	<div class="form-group">
		@Html.LabelFor(a => a.Customer.birthDate)

		@Html.TextBoxFor(a => a.Customer.birthDate, new { @class = "form-control" })
	</div>


	<div class="form-check">
		<label class="form-check-label" for="defaultCheck1">
			@Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter) Subscribed to newsletter ?
		</label>
	</div>

	<div class="form-group">
		@Html.LabelFor(a => a.Customer.MemberShipTypeId)

		@Html.DropDownListFor(a => a.Customer.MemberShipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "select membership", new { @class = "form-control" })
	</div>
}